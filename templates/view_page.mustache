{{!
    @template mod_coursecertificate/view_page

    Template for showing the view page.

    Example context (json):
    {
        "certificateid" : 1,
        "certificatename" : "Certificate Name",
        "showautomaticsend" : true,
        "showreport" : true,
        "showreceiveissue" : true,
        "automaticsend" : true,
        "table": "<table></table>"
    }
}}
<div data-region="mod_coursecertificate_view">
    <h2>{{certificatename}}</h2>
    {{#showreceiveissue}}
        <button class="btn btn-primary mb-3" data-certificateid="{{certificateid}}" data-action="receive-issue">
            {{#str}} receivecertificate, coursecertificate {{/str}}
        </button>
    {{/showreceiveissue}}
    {{#showautomaticsend}}
        <div data-region="automaticsend-alert" class="position-relative w-100 h-100">
            {{> coursecertificate/automaticsend_alert}}
        </div>
    {{/showautomaticsend}}
    {{#showreport}}
        <h3>{{#str}} certifiedusers, coursecertificate {{/str}}</h3>
        <div data-region="issues-report" class="position-relative w-100 h-100">
            {{> coursecertificate/issues_report}}
        </div>
    {{/showreport}}
</div>

{{#js}}
    require(['mod_coursecertificate/manager'], function(m) {
        m.init();
    });
{{/js}}